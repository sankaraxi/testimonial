generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  
}

model User {
  id       String    @id
  sessions Session[]
  github_id Int   @unique
  username  String
  avatar_url  String
  tweetReviews  TweetReview[]
  images       Images[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model TweetReview{
  id        String @id
  profile   String
  username  String
  handle    String @unique
  tweetContent  String
  verified  Boolean
  userId    String
  user      User  @relation(references: [id],fields: [userId], onDelete: Cascade)
  createdAt  DateTime
  images    Images[]

}

model Images {
  id      String @id
  image   String
  userId  String
  user    User @relation(references: [id],fields: [userId],onDelete: Cascade)
  tweetName String
  tweetReview  TweetReview @relation(references: [handle],fields: [tweetName],onDelete: Cascade)
}